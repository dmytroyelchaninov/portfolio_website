    - var js_main = ["https://code.jquery.com/jquery-3.4.1.slim.min.js", "{{ url_for('static', filename='js/burger.js') }}", "{{ url_for('static', filename='js/game.js') }}", "{{ url_for('static', filename='js/logo.js') }}"]
    - var gameUrl = "{{ url_for('game') }}"

